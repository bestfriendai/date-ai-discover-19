{
  "imports": {
    "std/": "https://deno.land/std@0.192.0/",
    "supabase": "https://esm.sh/@supabase/supabase-js@2.7.1"
  },
  "tasks": {
    "start": "deno run --allow-net --allow-env --allow-read index.ts",
    "dev": "deno run --watch --allow-net --allow-env --allow-read index.ts",
    "test": "deno test --allow-net --allow-env"
  },
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true
  },
  "lint": {
    "files": {
      "include": ["**/*.ts"]
    },
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-unused-vars"]
    }
  },
  "fmt": {
    "files": {
      "include": ["**/*.ts"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true
    }
  }
}
